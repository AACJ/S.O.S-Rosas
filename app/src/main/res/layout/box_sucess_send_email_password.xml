<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/boxcadastroshape"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/blackText"
                android:text="Sucesso ao enviar o email."
                android:textAlignment="center"
                android:layout_marginBottom="16sp"/>

            <TextView
                android:id="@+id/text_email_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/blackText"
                android:text="Uma mensagem com o link para alterar sua senha foi enviada para o seu email. Por favor verifique sua caixa de email, caso a mensagem não tenha chegado tente o processo novamente e verifique se o email que você está colocando está correto."
                android:textAlignment="center"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"/>

            <Button
                android:id="@+id/button_ok_send_email"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text="OK"
                android:textSize="18sp"
                android:layout_margin="16dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorTextDefaultWhite"
                android:background="@drawable/buttonshape_pos_cadastro"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>