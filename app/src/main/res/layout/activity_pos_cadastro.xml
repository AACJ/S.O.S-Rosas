<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tela_fundo_login_new"
    android:orientation="vertical">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_pos_cadastro"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:id="@+id/indicator_view_pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/view_pager_pos_cadastro"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/button_avanca_pos_cadastro"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="AvanÃ§ar"
        android:layout_marginEnd="8dp"
        android:textColor="@color/colorTextDefaultWhite"
        android:background="@drawable/buttonshape_pos_cadastro"
        app:layout_constraintTop_toTopOf="@id/indicator_view_pager"
        app:layout_constraintBottom_toBottomOf="@id/indicator_view_pager"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/button_skip_pos_cadastro"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="Pular"
        android:layout_marginStart="8dp"
        android:textColor="@color/colorTextDefaultWhite"
        android:background="@drawable/buttonshape_pos_cadastro"
        app:layout_constraintTop_toTopOf="@id/indicator_view_pager"
        app:layout_constraintBottom_toBottomOf="@id/indicator_view_pager"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>