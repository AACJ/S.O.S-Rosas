<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/boxcadastroshape">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo_official"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blackText"
                    android:textSize="20sp"
                    android:text="Termos de uso"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/intro_termos_uso"
                    android:justificationMode="inter_word"
                    android:textColor="@color/blackText"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blackText"
                    android:textSize="18sp"
                    android:text="INFORMAÇÕES GERAIS SOBRE O APLICATIVO S.O.S ROSAS:"
                    android:textAlignment="textStart"
                    android:justificationMode="inter_word"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/informacoes_gerais_termos_de_uso"
                    android:justificationMode="inter_word"
                    android:textColor="@color/blackText"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blackText"
                    android:textSize="18sp"
                    android:text="FUNCIONALIDADES DO APLICATIVO S.O.S ROSAS"
                    android:textAlignment="textStart"
                    android:justificationMode="inter_word"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/funcionalidades_termos_uso"
                    android:justificationMode="inter_word"
                    android:textColor="@color/blackText"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blackText"
                    android:textSize="18sp"
                    android:text="DAS RESPONSABILIDADES E OBRIGAÇÕES DOS USUÁRIOS:"
                    android:textAlignment="textStart"
                    android:justificationMode="inter_word"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/resposabilidades_usuario_termos_uso"
                    android:justificationMode="inter_word"
                    android:textColor="@color/blackText"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blackText"
                    android:textSize="18sp"
                    android:text="DA ISENÇÃO E LIMITAÇÕES DE RESPONSABILIDADE DO APLICATIVO S.O.S ROSAS"
                    android:textAlignment="textStart"
                    android:justificationMode="inter_word"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/insencao_limitacao_termos_uso"
                    android:justificationMode="inter_word"
                    android:textColor="@color/blackText"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blackText"
                    android:textSize="18sp"
                    android:text="DISPOSIÇÕES GERAIS"
                    android:textAlignment="textStart"
                    android:justificationMode="inter_word"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/disposicoes_gerais_termos_uso"
                    android:justificationMode="inter_word"
                    android:textColor="@color/blackText"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blackText"
                    android:textSize="20sp"
                    android:text="Políticas de privacidade"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/introducao_politica_privacidade"
                    android:justificationMode="inter_word"
                    android:textColor="@color/blackText"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blackText"
                    android:textSize="18sp"
                    android:text="OBTENÇÃO DOS DADOS"
                    android:textAlignment="textStart"
                    android:justificationMode="inter_word"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dados_obtencao_politica_privacidade"
                    android:justificationMode="inter_word"
                    android:textColor="@color/blackText"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blackText"
                    android:textSize="18sp"
                    android:text="USO DOS DADOS"
                    android:textAlignment="textStart"
                    android:justificationMode="inter_word"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/uso_dados_politica_privacidade"
                    android:justificationMode="inter_word"
                    android:textColor="@color/blackText"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blackText"
                    android:textSize="18sp"
                    android:text="ARMAZENAMENTO DOS DADOS"
                    android:textAlignment="textStart"
                    android:justificationMode="inter_word"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/armazenamento_politica_privacidade"
                    android:justificationMode="inter_word"
                    android:textColor="@color/blackText"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blackText"
                    android:textSize="18sp"
                    android:text="DISPOSIÇÕES GERAIS"
                    android:textAlignment="textStart"
                    android:justificationMode="inter_word"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/disposicao_geral_politica_privacidade"
                    android:justificationMode="inter_word"
                    android:textColor="@color/blackText"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Atualização: 27 de outubro de 2020."
                    android:justificationMode="inter_word"
                    android:textColor="@color/blackText"
                    android:textSize="16sp"/>

                <Button
                    android:id="@+id/button_ok"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="OK"
                    android:textSize="16dp"
                    android:layout_margin="16dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorTextDefaultWhite"
                    android:background="@drawable/buttonshape_pos_cadastro"/>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>


</RelativeLayout>