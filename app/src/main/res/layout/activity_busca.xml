            android:id="@+id/img_utilizador_busca"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/do_utilizador"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/image_informacao"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_informacao"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/icon_busca_p"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toRightOf="@id/img_utilizador_busca"
            app:layout_constraintRight_toLeftOf="@id/img_configuracao_busca"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/icon_busca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Busca"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/colorTextDefaultWhite"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/image_informacao"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <View
            android:id="@+id/underline_busca"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginBottom="8dp"
            android:background="@color/whiteBarNavegation"
            app:layout_constraintLeft_toLeftOf="@id/icon_busca"
            app:layout_constraintRight_toRightOf="@id/icon_busca"
            app:layout_constraintTop_toBottomOf="@id/icon_busca"/>

        <ImageView
            android:id="@+id/img_configuracao_busca"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/icon_configuracao"
            app:layout_constraintLeft_toRightOf="@id/image_informacao"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


