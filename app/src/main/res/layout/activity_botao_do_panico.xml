<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTextDefaultWhite"
    tools:context=".View.BotaoDoPanicoActivity">

    <Button
        android:id="@+id/button_voltar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:background="@drawable/icon_voltar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ATENÇÃO!"
        android:layout_marginTop="64dp"
        android:textColor="@color/colorTextDefaultRed"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_voltar" />

    <TextView
        android:id="@+id/texto_botao_pancio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:textSize="16sp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="@string/texto_botao_panico"
        android:justificationMode="inter_word"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_attention" />

    <Button
        android:id="@+id/botao_panico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/botao_panico"
        android:layout_marginTop="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texto_botao_pancio"
        />

</androidx.constraintlayout.widget.ConstraintLayout>