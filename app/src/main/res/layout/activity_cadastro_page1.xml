<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_cadastro_page1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

    <LinearLayout
        android:id="@+id/box_logo_rosa_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logo_sem_nome"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/box_cadastro_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginBottom="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preencha os dados para se cadastrar no aplicativo"
            android:textAlignment="center"
            android:textColor="@color/blackText"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_cadastro_usuario"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/utilizador_alterar" />

            <Button
                android:id="@+id/button_remove_image"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="90dp"
                android:visibility="gone"
                android:layout_alignLeft="@id/image_cadastro_usuario"
                android:text="X"
                android:textSize="18sp"
                android:background="@drawable/radio_button_cadastro_unselected"
                />

        </RelativeLayout>

        <EditText
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome"
            android:inputType="text|textNoSuggestions"
            android:textColor="@color/colorTextDefaultRed" />

        <EditText
            android:id="@+id/text_name_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome de usuario"
            android:inputType="text|textNoSuggestions"
            android:textColor="@color/colorTextDefaultRed" />

        <EditText
            android:id="@+id/text_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorTextDefaultRed" />

        <EditText
            android:id="@+id/text_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Senha"
            android:inputType="textPassword"
            android:textColor="@color/colorTextDefaultRed" />

        <EditText
            android:id="@+id/text_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirmação de senha"
            android:inputType="textPassword"
            android:textColor="@color/colorTextDefaultRed" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/text_fake_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Senha falsa"
            android:inputType="textPassword"
            android:textColor="@color/colorTextDefaultRed"/>

            <ImageView
                android:id="@+id/info_fake_pass"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_about_fake_pass"
                android:layout_alignParentEnd="true"
                app:tint="@color/colorTextDefaultRed" />

        </RelativeLayout>

        <EditText
            android:id="@+id/text_cpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CPF"
            android:inputType="numberDecimal"
            android:textColor="@color/colorTextDefaultRed" />

        <EditText
            android:id="@+id/text_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="RG"
            android:maxLength="8"
            android:inputType="numberDecimal"
            android:textColor="@color/colorTextDefaultRed" />

        <EditText
            android:id="@+id/text_data_nascimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data de nascimento"
            android:inputType="date"
            android:textColor="@color/colorTextDefaultRed" />

        <EditText
            android:id="@+id/text_celular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telefone/Celular"
            android:inputType="phone"
            android:textColor="@color/colorTextDefaultRed" />

        <Button
            android:id="@+id/button_avanca"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/buttonshape_pos_cadastro"
            android:text="Avançar"
            android:textColor="@color/colorTextDefaultWhite" />

    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>